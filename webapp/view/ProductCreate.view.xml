<mvc:View controllerName="com.rikdiaz.projectui5.projectui5.controller.ProductCreate"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page title="Product Create">
    <content>
         <VBox class="sapUiSmallMargin">
    
    <f:SimpleForm
      id="productForm"
      editable="true"
      layout="ResponsiveGridLayout"
      labelSpanL="3"
      labelSpanM="3"
      emptySpanL="4"
      emptySpanM="4"
      columnsL="1"
      columnsM="1"
      title="Registrar Nuevo Producto"
      >
      
      <Label text="Product Name" />
      <Input value="{mNewProduct>/ProductName}" placeholder="Ingrese el nombre del producto" />

      <Label text="Quantity Per Unit" />
      <Input value="{mNewProduct>/QuantityPerUnit}" placeholder="Ej. 10 cajas x unidad" />

      <Label text="Reorder Level" />
      <Input value="{mNewProduct>/ReorderLevel}" type="Number" placeholder="Nivel de reorden" />

      <Label text="Supplier ID" />
      <Input value="{mNewProduct>/SupplierID}" type="Number" placeholder="ID del proveedor" />

      <Label text="Unit Price" />
      <Input value="{mNewProduct>/UnitPrice}" type="Number" placeholder="Precio por unidad" />

      <Label text="Units In Stock" />
      <Input value="{mNewProduct>/UnitsInStock}" type="Number" placeholder="Unidades en stock" />

      <Label text="Units On Order" />
      <Input value="{mNewProduct>/UnitsOnOrder}" type="Number" placeholder="Unidades en pedido" />

      <Label text="Category" />
      <Input
        id="CategoryInput"
        placeholder="Enter Category"
        showSuggestion="true"
        showValueHelp="false"
        valueHelpRequest=".onValueHelpRequest"
        suggestionItems="{mListCategories>/}">
        <suggestionItems>
          <core:Item text="{mListCategories>CategoryName}" key="{mListCategories>CategoryID}"/>
        </suggestionItems>
      </Input>

      <Toolbar>
        <ToolbarSpacer />
        <Button text="Guardar" type="Emphasized" press="onSaveProduct" />
        <Button text="Cancelar" press="onCancel" />
      </Toolbar>
    </f:SimpleForm>
  </VBox>
</content>
    </Page>
</mvc:View>