<mvc:View controllerName="com.rikdiaz.projectui5.projectui5.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">        
        <content>


            <VBox class="sapUiContentPadding sapUiSmallMargin">
                <OverflowToolbar>
                    <!-- <HBox justifyContent="SpaceBetween" alignItems="Center"> -->
                        <Title text="Lista de Productos"/>                        
                        <ToolbarSpacer/>
                        <SearchField width="30%" placeholder="Buscar productos por Nombre" liveChange=".onSearchProductsBinding">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow" minWidth="150px"/>                
                            </layoutData>
                        </SearchField>
                    <!-- </HBox> -->
                </OverflowToolbar>
                <List 
                    id="listProducts"
                    headerLevel="H4"
                    items="{ path: 'mListProducts>/' }" 
                    growing="true" growingThreshold="10"
                    noDataText="No se encontrÃ³ Productos" 
                    mode="SingleSelectMaster"
                    itemPress=".onPressProduct"
                    >                    

                    <CustomListItem type="Active">
                        <HBox justifyContent="SpaceBetween" alignItems="Center">  
                            <VBox >
                                <Title text="{mListProducts>ProductName}" level="H3"  class="sapUiTinyMarginBegin sapUiTinyMargin"/>
                                <Text text="{mListProducts>QuantityPerUnit}" wrapping="true" class="sapUiTinyMarginBegin"/>
                            </VBox>                          
                            <HBox >
                                <tnt:InfoLabel id="il1" 
                                text="{mListProducts>UnitsInStock}" 
                                renderMode="Narrow" 
                                colorScheme="{path: 'mListProducts>UnitsInStock', formatter: '.formatter.colorSchemeStock'}" 
                                class="sapUiTinyMarginEnd"/>
                            </HBox>
                        </HBox>
                    </CustomListItem>

                    
                </List>
            </VBox>
        </content>        
    </Page>
</mvc:View>